.panel.panel-success
  .panel-heading
    %h3.panel-title ÚLTIMAS RUTAS AÑADIDAS
  .panel-body
    .row
    - @ultimas_rutas.each do |ruta_ult|
      .col-xs-3
        %a.thumbnail{:href => "ruta/#{ruta_ult.id_rut}"}
          %img.img-responsive{:src => "./img/sendero1.jpg"}
          %p= ruta_ult.nombre
          %p Añadida el #{ruta_ult.created_at.strftime("%d/%m/%Y")}
          
