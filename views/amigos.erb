      <% @amigo.each do |amigo| %>
      <div class="clase-amigo">
        <a href="" class="">
          <img src="img/perfil-anonimo.jpg" alt="" width = 200 px> </img>
          <p class="list-group-item-text"><%= amigo.nombre %></p>
        </a>
      </div>
      <% end %>
    </div>
    -->
    <% if (flash[:mensaje]) %>
    <div class="alert alert-success" role="alert"><%= flash[:mensaje] %></div>
    <% end %>  
     <script src="https://maxcdn.bootstrapcdn.com/bootstrap/3.3.1/js/bootstrap.min.js"></script>
  </body>  
</html








